{
    "name": "medusight",
    "version": "1.0.0",
    "description": "MeduSight - Video Quality Control",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "build-win": "electron-builder --win",
        "build-mac": "electron-builder --mac",
        "build-linux": "electron-builder --linux"
    },
    "build": {
        "appId": "com.northwestern.medusight",
        "productName": "MeduSight",
        "directories": {
            "output": "dist"
        },
        "files": [
            "**/*",
            "!dist",
            "!node_modules",
            "!**/__pycache__"
        ],
        "win": {
            "target": "nsis",
            "icon": "build/icon.png"
        },
        "mac": {
            "target": "dmg",
            "icon": "build/icon.png"
        },
        "linux": {
            "target": "AppImage",
            "icon": "build/icon.png"
        }
    },
    "author": "Sophia Francis",
    "license": "SEE LICENSE IN LICENSE",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {}
}